generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserType {
  SUPER_ADMIN
  ADMIN
  STAFF
  PARTNER
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String
  type         UserType

  partnerDetails PartnerDetails?
}

model PartnerDetails {
  id Int @id @default(autoincrement())

  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique
}
